<div class="row">
  <div class="container">
    <div class="large-12 columns">
      <div class="center">
        <%= form_for(@marca) do |f| %>
          <% if @marca.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@marca.errors.count, "error") %> prohibited this marca from being saved:</h2>

              <ul>
              <% @marca.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :nombre %><br>
            <%= f.text_field :nombre %>
          </div>
          <div class="row no-padding">
            <div class="large-3 columns no-padding clearfix">
              <div class="actions">
                <%= f.submit "Ingresar Marca", class: 'button' %>
              </div>
            </div>
            <div class="large-3 columns no-padding">
              <div class="actions">
                <%= link_to 'Cancelar', marcas_path, class: 'alert button float-right' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
