<div class="row">
  <div class="container">
    <div class="large-12 columns">
      <div class="center">
        <%= form_for(@tipo) do |f| %>
          <% if @tipo.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@tipo.errors.count, "error") %> prohibited this tipo from being saved:</h2>

              <ul>
              <% @tipo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :nombre %><br>
            <%= f.text_field :nombre %>
          </div>
          <div class="row no-padding">
            <div class="large-4 columns no-padding clearfix">
              <div class="actions">
                <%= f.submit "Ingresar Tipo de Activo", class: 'button' %>
              </div>
            </div>
            <div class="large-3 columns no-padding">
              <div class="actions">
                <%= link_to 'Cancelar', tipos_path, class: 'alert button float-right' %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
