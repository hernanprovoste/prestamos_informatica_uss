<div class="row">
  <div class="container">
    <div class="large-12 columns">
      <div class="center">
        <%= form_for(@equipo) do |f| %>
          <% if @equipo.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@equipo.errors.count, "error") %> prohibited this equipo from being saved:</h2>

              <ul>
              <% @equipo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :codUss %><br>
            <%= f.text_field :codUss %>
          </div>
          <div class="field">
            <%= f.label :tipo %><br>
            <%= collection_select(:equipo, :tipo_id, Tipo.all, :id, :nombre, {}, {:multiple => false}) %>
          </div>
          <div class="field">
            <%= f.label :marca %><br>
            <%= collection_select(:equipo, :marca_id, Marca.all, :id, :nombre, {}, {:multiple => false}) %>
          </div>
          <div class="field">
            <%= f.label :modelo %><br>
            <%= f.text_field :modelo %>
          </div>
          <div class="field">
            <%= f.label :serial %><br>
            <%= f.text_field :serial %>
          </div>

          <div class="row no-padding">
            <div class="large-3 columns no-padding clearfix">
              <div class="actions">
                <%= f.submit "Ingresar Equipo", class: 'button' %>
              </div>
            </div>
            <div class="large-3 columns no-padding">
              <div class="actions">
                <%= link_to 'Cancelar', equipos_path, class: 'alert button float-right' %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
