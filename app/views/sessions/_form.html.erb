<div class="row">
  <div class="container">
    <div class="large-12 columns">
      <div class="center">
        <%= form_for(:session, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :correo_institucional %><br>
            <%= f.text_field :correo_institucional %>
          </div>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password %>
          </div>
          <div class="row no-padding">
            <div class="large-12 columns no-padding clearfix">
              <div class="actions">
                <%= f.submit "Ingresar", class: 'success button' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
